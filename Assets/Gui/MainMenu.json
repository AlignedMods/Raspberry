{
    "name": "Main-Menu",
    "type": "menu",
    "elements": [ "play", "editor", "settings", "quit" ],

    "play": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 130],
        "size": [100, 30],
        "text": "Play",

        "on-click": "exec-cpp StartGame"
    },

    "editor": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 90],
        "size": [100, 30],
        "text": "Editor",

        "on-click": "switch Test-Menu"
    },

    "settings": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 50],
        "size": [100, 30],
        "text": "Settings",

        "on-click": "exec-cpp StartGame"
    },

    "quit": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 10],
        "size": [100, 30],
        "text": "Quit",

        "on-click": "switch Quit-Menu"
    },

    "test": {
        "type": "slider",

        "bounds": [300, 200, 200, 50],

        "number": "Hello",
        "min": 31.999,
        "max": 32.0,
        "step": 0.0001
    }
}
