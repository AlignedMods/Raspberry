{
    "name": "Main-Menu",
    "type": "menu",
    "elements": [ "test", "play", "editor", "settings", "quit" ],

    "test": {
        "type": "hh",

        "size": [40, 40]
    },

    "play": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 130],
        "size": [100, 30],
        "text": "Play",

        "on-click": "exec-cpp StartGame"
    },

    "editor": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 90],
        "size": [100, 30],
        "text": "Editor",

        "on-click": "nop"
    },

    "settings": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 50],
        "size": [100, 30],
        "text": "Settings",

        "on-click": "exec-cpp StartGame"
    },

    "quit": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 10],
        "size": [100, 30],
        "text": "Quit",

        "on-click": "switch Quit-Menu"
    }
}
