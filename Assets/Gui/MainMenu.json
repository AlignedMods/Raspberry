{
    "name": "Main-Menu",
    "type": "menu",
    "elements": [ "test", "hi", "play", "editor", "settings", "quit" ],

    "test": {
        "type": "combobox",

        "options": ["json", "toml", "yaml"]
    },

    "hi": {
        "type": "slider",

        "value": 3.0,
        "min": -4.0,
        "max": 1000.0,
        "step": 40.0,
        
        "anchor": ["right", "top"]
    },

    "play": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 130],
        "size": [100, 30],
        "text": "Play",

        "on-click": "exec-cpp StartGame"
    },

    "editor": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 90],
        "size": [100, 30],
        "text": "Editor",

        "on-click": "nop"
    },

    "settings": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 50],
        "size": [100, 30],
        "text": "Settings",

        "on-click": "exec-cpp StartGame"
    },

    "quit": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 10],
        "size": [100, 30],
        "text": "Quit",

        "on-click": "switch Quit-Menu"
    }
}
