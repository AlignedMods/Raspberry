{
    "name": "Quit-Menu",
    "type": "menu",
    "elements": [ "confirm", "yes", "no" ],

    "confirm": {
        "type": "text",

        "anchor": ["middle", "top"],

        "offset": [0, 70],
        "size": [300, 50],
        "text": "Are you sure you wish to quit?"
    },

    "yes": {
        "type": "button",

        "anchor": ["middle", "bottom"],

        "offset": [0, 80],
        "size": [80, 30],
        "text": "Yes",

        "on-click": "exec-cpp QuitGame"
    },

    "no": {
        "type": "button",

        "anchor": ["middle", "bottom"],

        "offset": [0, 40],
        "size": [80, 30],
        "text": "No",

        "on-click": "switch $PREVIOUS"
    }
}
