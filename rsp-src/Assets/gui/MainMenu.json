{
    "name": "Main-Menu",
    "type": "menu",
    "elements": [ "play", "editor", "settings", "quit" ],

    "play": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 130],
        "size": [100, 30],
        "text": "Play",

        "on-click": "exec-cpp StartGame"
    },

    "editor": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 90],
        "size": [100, 30],
        "text": "Editor",

        "on-click": "exec-cpp StartEditor"
    },

    "settings": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 50],
        "size": [100, 30],
        "text": "Settings",

        "on-click": "set-active test true"
    },

    "quit": {
        "type": "button",

        "anchor": ["left", "bottom"],

        "offset": [10, 10],
        "size": [100, 30],
        "text": "Quit",

        "on-click": "switch Quit-Menu"
    }
}
